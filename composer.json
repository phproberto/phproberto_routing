{
  "name": "phproberto/phproberto-routing",
  "description": "Entities for Joomla!",
  "keywords": ["joomla", "symfony", "router", "routing"],
  "homepage": "https://github.com/phproberto/phproberto-routing",
  "license": "LGPL-2.1+",
  "authors": [
      {
          "name": "Roberto Segura LÃ³pez",
          "email": "roberto@phproberto.com",
          "homepage": "http://phproberto.com"
      }
  ],
  "config": {
    "process-timeout":0
  },
  "require": {
    "php": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Phproberto\\Joomla\\Routing\\": "extensions/libraries/phproberto_routing/src/"
    }
  },
  "autoload-dev": {
      "psr-4": {
          "Phproberto\\Joomla\\Routing\\Tests\\": "tests/tests"
      }
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8.35",
    "joomla/coding-standards": "~2.0@alpha",
    "squizlabs/php_codesniffer": "^2.8"
  },
  "scripts": {
    "clean": "cd ./build && gulp clean",
    "copy" : "cd ./build && gulp copy",
    "cs" : "./vendor/bin/phpcs",
    "dev": "cd ./build && gulp",
    "release" : "cd ./build && gulp release",
    "setup" : "cd ./build && npm install && cp gulp-config.dist.json gulp-config.json",
    "test" : "./vendor/bin/phpunit",
    "watch" : "cd ./build && gulp watch"
  }
}
